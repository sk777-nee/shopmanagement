<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/size"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".View_List_Activity">


    <Button
        android:id="@+id/btnshow"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="@drawable/round_corner"
        android:text="show list"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/et_show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.463"
        app:layout_constraintStart_toEndOf="@+id/et_show"
        app:layout_constraintTop_toTopOf="@+id/et_show" />

    <Button
        android:id="@+id/btndel"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:background="@drawable/round_corner"
        android:text="Delete List"

        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnshow"
        app:layout_constraintVertical_bias="0.025" />

    <EditText
        android:id="@+id/et_show"
        android:layout_width="173dp"
        android:layout_height="39dp"
        android:ems="10"
        android:hint="enter name of list"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.121"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/_dynamic"
        app:layout_constraintVertical_bias="0.289" />

    <ListView
        android:id="@+id/_dynamic"
        android:layout_width="275dp"
        android:layout_height="275dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_toolbarvl"
        app:layout_constraintVertical_bias="0.17">


    </ListView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/set_toolbarvl"
        android:layout_width="410dp"
        android:layout_height="42dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:subtitleTextColor="@color/colorAccent"


        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>