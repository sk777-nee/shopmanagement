<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/m_image"
            android:layout_width="match_parent"
            android:layout_height="297dp"
            android:scaleType="centerCrop" />



        <TextView
            android:id="@+id/txtwname"
            android:layout_width="353dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtwaddress"
            android:layout_width="347dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtwage"
            android:layout_width="349dp"
            android:layout_height="42dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtwmobile"
            android:layout_width="345dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"

            android:textColor="@android:color/black"
            android:textSize="18sp" />





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/dayc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="day count"
                android:inputType="number">

            </EditText>


            <ImageView
                android:id="@+id/payicon"
                android:layout_width="118dp"
                android:layout_height="match_parent"
                android:src="@drawable/gpay">


            </ImageView>

            <ImageView
                android:id="@+id/callicon2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_call">

            </ImageView>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>







